{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: 'Automerge',
  extends: [
    ':automergeRequireAllStatusChecks',
    ':automergeMinor',
    ':automergePatch',
    ':automergeLinters',
    ':automergeTesters',
    ':automergeTypes',
    ':automergeDigest',
  ],
  // 深夜にマージする
  automergeSchedule: ['after 4am'],
  // セキュリティー関連は Automerge
  vulnerabilityAlerts: {
    labels: ['renovate', 'security'],
    automerge: true,
    ignoreTests: true,
    stabilityDays: 0,
  },
  packageRules: [
    // 直ちにマージ
    {
      automerge: true,
      matchPackageNames: ['@kawaiioverflow/arm', 'renovate'],
      ignoreTests: true,
      stabilityDays: 0,
      automergeSchedule: ['at any time'],
    },
    // テスト無視
    {
      automerge: true,
      matchPackageNames: [
        '@slashnephy/eslint-config',
        '@slashnephy/prettier-config',
        '@slashnephy/typescript-extension',
      ],
      ignoreTests: true,
    },
    // テスト後マージ
    {
      automerge: true,
      matchPackageNames: ['node', 'gradle', 'yarn', 'discord-api-types'],
    },
    {
      automerge: true,
      matchDepTypes: ['devDependencies'],
    },
  ],
}
