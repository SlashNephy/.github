{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: 'Automerge',
  extends: [
    ':automergeMinor',
    ':automergeRequireAllStatusChecks',
    ':automergeLinters',
    ':automergeTesters',
    ':automergeTypes',
  ],
  // セキュリティー関連は Automerge
  vulnerabilityAlerts: {
    labels: ['renovate', 'security'],
    automerge: true,
    ignoreTests: true,
    stabilityDays: 0,
    schedule: ['at any time'],
  },
  packageRules: [
    // 特定パッケージは常に Automerge
    {
      matchPackageNames: [
        '@kawaiioverflow/arm',
        'renovate',
        '@slashnephy/eslint-config',
        '@slashnephy/prettier-config',
        '@slashnephy/typescript-extension',
      ],
      automerge: true,
      ignoreTests: true,
      stabilityDays: 0,
      schedule: ['at any time'],
    },
    // 特定パッケージは CI Pass 後 Automerge
    {
      matchPackageNames: ['node', 'gradle', 'yarn', 'discord-api-types'],
      automerge: true,
      stabilityDays: 0,
      schedule: ['at any time'],
    },
    // devDependencies は常に Automerge
    {
      matchDepTypes: ['devDependencies'],
      automerge: true,
      ignoreTests: true,
      stabilityDays: 0,
      schedule: ['at any time'],
    },
    // マイナーな @types/* の更新は常に Automerge
    {
      matchDepTypes: ['devDependencies'],
      matchPackagePatterns: ['^@types/'],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
      ignoreTests: true,
      stabilityDays: 0,
      schedule: ['at any time'],
    },
  ],
}
