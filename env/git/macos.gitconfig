[include]
  path = ~/.github/env/git/.gitconfig

[user]
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIBVY3XtLqcEQc5Zo4lXjalnmHyO69uMyv2L5XzzKeuJo

[includeIf "gitdir:~/ghq/github.com/hatena/"]
  path = ~/.github/env/git/user/business.gitconfig

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
