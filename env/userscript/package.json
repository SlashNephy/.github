{
  "name": "@slashnephy/userscript",
  "version": "0.1.0",
  "repository": {
    "url": "https://github.com/SlashNephy/.github",
    "directory": "env/userscript"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && yarn format",
    "watch": "yarn bundle -w",
    "lint": "concurrently -n lint: 'yarn:lint:*'",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "format": "concurrently -n format: 'yarn:format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "ci": "concurrently -n ci: 'yarn:ci:*'",
    "ci:bundle": "yarn bundle",
    "ci:generate-readme": "ts-node --project tsconfig.bin.json bin/generate-readme.ts && yarn format:prettier"
  },
  "devDependencies": {
    "@babel/core": "7.18.13",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-typescript": "7.18.6",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-typescript": "8.4.0",
    "@slashnephy/eslint-config": "0.1.14",
    "@slashnephy/prettier-config": "0.1.1",
    "@types/babel__core": "7.1.19",
    "@types/babel__preset-env": "7.9.2",
    "@types/jquery": "3.5.14",
    "@types/node": "18.7.14",
    "@types/tampermonkey": "4.0.5",
    "concurrently": "7.3.0",
    "eslint": "8.22.0",
    "eslint-plugin-userscripts": "0.2.9",
    "markdown-doc-builder": "1.3.0",
    "prettier": "2.7.1",
    "rollup": "2.79.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.2"
  },
  "packageManager": "yarn@3.2.3",
  "eslintConfig": {
    "extends": [
      "@slashnephy/eslint-config"
    ],
    "overrides": [
      {
        "files": "dist/*.user.js",
        "extends": [
          "plugin:userscripts/recommended"
        ],
        "rules": {
          "no-undef": "off",
          "userscripts/compat-grant": [
            "error",
            {
              "requireAllCompatible": true
            }
          ],
          "userscripts/compat-headers": [
            "error",
            {
              "requireAllCompatible": true
            }
          ]
        }
      }
    ]
  },
  "browserslist": [
    "> 0.25%",
    "not dead"
  ],
  "userscriptVersions": {
    "tampermonkey": ">4"
  }
}
