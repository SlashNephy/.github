{
  "name": "@slashnephy/textlint-config",
  "version": "0.1.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SlashNephy/.github",
    "directory": "env/textlint"
  },
  "license": "MIT",
  "files": [
    "package.json",
    "dist/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist/",
    "format": "concurrently -n format: 'yarn:format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "concurrently -n lint: 'yarn:lint:*'",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "publish": "yarn clean && yarn build && yarn npm publish"
  },
  "dependencies": {
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-rule-no-todo": "2.0.1",
    "textlint-rule-preset-ja-spacing": "2.3.0",
    "textlint-rule-preset-ja-technical-writing": "7.0.0",
    "textlint-rule-preset-jtf-style": "2.3.13"
  },
  "peerDependencies": {
    "textlint": "^12 || ^13.0.0"
  },
  "devDependencies": {
    "@slashnephy/eslint-config": "0.3.23",
    "@slashnephy/prettier-config": "0.1.16",
    "@textlint/types": "13.3.1",
    "@types/node": "18.15.3",
    "concurrently": "7.6.0",
    "eslint": "8.36.0",
    "prettier": "2.8.5",
    "typescript": "5.0.2"
  },
  "packageManager": "yarn@3.4.1",
  "eslintConfig": {
    "extends": [
      "@slashnephy/eslint-config"
    ]
  }
}
